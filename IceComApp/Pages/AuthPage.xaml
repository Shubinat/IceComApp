<Page x:Class="IceComApp.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IceComApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Авторизация" Style="{StaticResource TBlockHeader}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Логин:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Width="150" x:Name="TBoxLogin"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Пароль:" VerticalAlignment="Center" Margin="5"/>
                <PasswordBox Width="150" x:Name="PBoxPassword"/>
            </StackPanel>
            <CheckBox Content="Запомнить меня" HorizontalAlignment="Right" Margin="5 0" x:Name="ChBoxRememberMe"/>
            <Button Content="Войти" x:Name="BtnLogIn" Click="BtnLogIn_Click"/>
        </StackPanel>
    </Grid>
</Page>

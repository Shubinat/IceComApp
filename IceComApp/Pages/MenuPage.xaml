<Page x:Class="IceComApp.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IceComApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Выбор действия">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource TBlockHeader}" Text="Выбор действия"/>
            <Button Content="Список продукции" x:Name="BtnProducts" Click="BtnProducts_Click"/>
            <Button Content="Список магазинов" x:Name="BtnShops" Click="BtnShops_Click"/>
            <Button Content="Список продаж" x:Name="BtnProductSales" Click="BtnShopSales_Click"/>
            <Button Content="Список закупок" x:Name="BtnProductProductPurchases" Click="BtnProductSales_Click"/>
            <Button Content="Список производителей" x:Name="BtnCompanies" Click="BtnCompanies_Click"/>
        </StackPanel>
    </Grid>
</Page>
